  <script>
    const translations = {
      fr: {
        title: "Boutique Halal Rencontre",
        subtitle: "Découvrez les cadeaux exclusifs à débloquer avec vos points"
      },
      en: {
        title: "Halal Rencontre Shop",
        subtitle: "Unlock exclusive gifts with your points"
      },
      ar: {
        title: "متجر اللقاء الحلال",
        subtitle: "افتح الهدايا الحصرية باستخدام نقاطك"
      },
      nl: {
        title: "Halal Rencontre Winkel",
        subtitle: "Ontgrendel exclusieve cadeaus met je punten"
      }
    };

    document.getElementById("language-select").addEventListener("change", function () {
      const lang = this.value;
      document.getElementById("title").innerText = translations[lang].title;
      document.getElementById("subtitle").innerText = translations[lang].subtitle;

      document.querySelectorAll(".gift").forEach(gift => {
        gift.setAttribute("data-locked", gift.getAttribute("data-locked-" + lang));
        document.body.dir = lang === "ar" ? "rtl" : "ltr";
      });
    });
  </script>
